<div class="comments">
  <ul>
    <% comments.each do |comment| %>
      <% if comment.id.present? %>
        <li>
          <p><%= comment.content %></p>
        </li>
      <% end %>
      <% if comment.user == current_user %>
      <p><%= link_to 'コメントを削除する', post_comment_path(comment.post_id, comment.id), method: :delete, remote: true %></p>
    <% end %>
    <% end %>
  </ul>
</div>